---
const { id } = Astro.props;
---

<dialog
    id={id}
    class="m-0 p-0"
    onclick="if (!event.target.closest('.modaldiv')) {close();}
"
>
    <div class="modaldiv flex h-full w-full items-center p-6">
        <slot name="modal" />
        <button
            onclick="parentElement.parentElement.close();"
            class="model-close-button ml-5 flex items-center justify-center gap-3 border-2 border-current px-4 py-3"
            >âœ”</button
        >
    </div>
</dialog>

<style lang="scss">
    .modaldiv {
        list-style: none;
        display: flex;

        background-image: none;
        background-size: 400%;

        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        background-position: 0;
        background-image: var(--accent-gradient);
        p {
            text-align: center;
        }
    }

    .model-close-button {
        text-decoration: none !important;
        line-height: 1.4 !important;
        color: var(--color-text) !important;
        border-color: var(--color-background) !important;
        border-radius: 0.4rem !important;
        span {
            margin: 0 !important;
            font-size: 1.25rem !important;
            transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1) !important;
        }
        &:is(:hover) {
            opacity: 0.7 !important;
            color: var(--action-color) !important;
            background-color: var(--color-background) !important;
        }
    }

    dialog {
        background-color: var(--color-background);
        position: fixed;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        color: var(--color-text);
        &::backdrop {
            position: fixed;
            top: 0px;
            right: 0px;
            bottom: 0px;
            left: 0px;
            background: rgba(122, 57, 90, 0.25);
        }
    }
</style>
