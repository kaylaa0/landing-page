/>

<style is:global>
    :root {
        --color-bg: hsl(17, 20%, 97%);
        --color-bg-2: hsl(17, 20%, 94%);
        --color-bg-3: hsl(17, 20%, 88%);
        --astro-blue: #4f39fa;
        --astro-pink: #da62c4;

        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            #da62c4 30%,
            white 60%
        );
    }
    code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
            DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
    }
    h1 {
        font-size: var(--font-size-xl);
    }
</style>
<style lang="scss" is:global>
    // theme settings
    :root {
        --font-family-default: InterVariable;
        --font-family-special: InterVariable;
        // light theme
        --font-color: var(--neutral-900);
        --action-color: var(--primary-400);
        --dark-action-color: var(--primary-500);
        --action-color-state: var(--primary-500);
        --background: var(--neutral-100);
        --primary-background: var(--primary-100);
        --neutral-background: var(--neutral-200);
    }

    // dark color scheme overrides
    .darkmode {
        --font-color: var(--neutral-100);
        --dark-action-color: theme("colors.pink.500");
        --action-color: theme("colors.pink.400");
        --action-color-state: theme("colors.pink.600");
        --background: var(--dark-100);
        --primary-background: var(--primary-500);
        --neutral-background: var(--neutral-900);
    }

    body {
        display: flex;
        flex-direction: column;
        color: var(--font-color);
        background-color: var(--background);

        main {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
        }
    }

    pre {
        padding: 1rem;
        border-radius: 0.35rem;
        border: 2px solid var(--action-color);
    }

    body .pagination a {
        &:hover,
        &:focus-visible {
            background-color: var(--action-color-state);

            svg path {
                stroke: white;
            }
        }
    }
</style>
<style>
    html {
        font-family: InterVariable !important;
        font-size: var(--font-size-base);
        color: var(--color-text);
        background-color: var(--color-bg);
    }

    body {
        margin: 0;
    }

    header {
        background: var(--color-bg-2);
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-header,
    .nav-header:visited {
        font-size: var(--font-size-base);
        font-weight: bold;
        color: inherit;
        text-decoration: none;
    }
</style>
